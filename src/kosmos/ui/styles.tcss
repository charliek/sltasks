/* Kosmos TUI Styles */

/* Main app styles */
Screen {
    background: $background;
}

#board-container {
    width: 100%;
    height: 1fr;
    padding: 0 1;
}

#columns {
    width: 100%;
    height: 100%;
}

/* Column styles */
KanbanColumn {
    width: 1fr;
    height: 100%;
    layout: vertical;
    border: solid $primary;
    margin: 0 1;
}

KanbanColumn:first-of-type {
    margin-left: 0;
}

KanbanColumn:last-of-type {
    margin-right: 0;
}

.column-header {
    height: auto;
    min-height: 3;
    padding: 1 1 0 1;
    background: $surface;
    text-align: center;
    text-style: bold;
    border-bottom: solid $primary-darken-2;
}

.column-content {
    height: 1fr;
    padding: 1;
}

/* Empty column state */
EmptyColumnMessage {
    text-align: center;
    color: $text-muted;
    padding: 2;
    text-style: italic;
    width: 100%;
}

/* Task card styles */
TaskCard {
    height: auto;
    min-height: 3;
    max-height: 8;
    margin-bottom: 1;
    padding: 0 1;
    background: $surface;
    border: solid $primary-darken-3;
}

TaskCard:hover {
    background: $surface-lighten-1;
    border: solid $primary-darken-1;
}

TaskCard:focus {
    background: $primary-darken-2;
    border: double $primary;
}

.task-title {
    text-style: bold;
    width: 100%;
}

.task-priority {
    height: 1;
}

.task-tags {
    height: 1;
    color: $text-muted;
}

.task-preview {
    height: 1;
    color: $text-muted;
    text-style: italic;
}

/* Focus state for task title */
TaskCard:focus .task-title {
    color: $text;
    text-style: bold;
}

/* Priority colors - used for standalone priority widgets */
.priority-critical {
    color: $error;
}

.priority-high {
    color: $warning;
}

.priority-medium {
    color: $primary;
}

.priority-low {
    color: $success;
}

/* Status bar */
#status-bar {
    height: 1;
    dock: bottom;
    background: $surface;
    padding: 0 1;
}

.status-filter {
    color: $text-muted;
}
